<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VerifyOtpFormActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/greenfinchlogo2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify OTP "
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="#3B8578"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/playfairdisplay_bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Otp Send To Your Mobile Number"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="#3B8578"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/kalam_light"
        />
    <TextView
        android:id="@+id/verifynumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="9876543219"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="#3B8578"
        android:fontFamily="@font/kalam_light"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:boxStrokeColor="@color/blue"
        android:hint="Enter Your OTP ">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/otpverify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/verifybutton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/playfairdisplay_bold"
        android:elevation="10dp"
        app:cornerRadius="30dp"
        android:text="@string/verify"
        android:textSize="15sp" />

</LinearLayout>